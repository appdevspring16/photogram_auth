<div class="page-header">
  <h1>
    Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-default">
            <div class="panel-heading"><%= like.user_id %> <small><%= time_ago_in_words(like.created_at) %> ago</small></div>
            <div class="panel-body"><a href="/photos/<%= like.photo_id %>"><img style='height: 100%; width: 100%; object-fit: contain' src="<%= Photo.find_by({ :id => like.photo_id }).image %>"></div>
            <div class="panel-body"><%= like.photo_id %></div>
            <!-- <td>
            <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
            <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td> -->
        </div>
      </div>
    </div>
    <% end %>
    </table>
  </div>
</div>
