<p></p>


<div class="container">

<% @likes.each do |like| %>
<% if current_user.id == like.user_id %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= current_user.id %>"><%= current_user.username %></a>
            <small>
              <%= time_ago_in_words(like.photo.created_at) %>
            </small>
          </h3>
        </div>

        <div class="panel-body">
          <a href="/photos/<%= like.photo.id %>">
            <img src="<%= like.photo.image %>" class="img-responsive">
          </a>

          <p>
              <!-- <a href="/delete_like/165" class="btn btn-link">
                <i class="fa fa-heart"></i>
              </a>
              alice
              likes
              this -->
          </p>

          <ul class="media-list">

            <li class="media">
              <div class="media-body">
                <h6 class="media-heading">
                  <a href="/users/<%= current_user.id %>"><%= current_user.username %></a>
                  <small>
                    <%= time_ago_in_words(like.photo.created_at) %>
                  </small>
                </h6>
                <%= like.photo.caption %>
              </div>
            </li>

          <% Comment.where(:photo_id => like.photo.id).each do |comment| %>
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a>
                <small>
                  <%= time_ago_in_words(comment.created_at) %>
                </small>
              </h6>
              <%= comment.body %>
            </div>
          </li>
          <% end %>
        </ul>

        </div>
      </div>
    </div>
  </div>

<% end %>
<% end %>

</div>
