<div class="page-header">
  <h1>
    Users
    <a href="/users/sign_up" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>E-mail</th>
        <th>Last sign-in</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.last_sign_in_at %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= user.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
