<div class="page-header">
  <h3>User <%=@user.username.capitalize %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @user.username.capitalize %></dd>

      <dt>E-mail</dt>
      <dd><%= @user.email %></dd>

      <dt>Photos</dt>


      <div class="col-md-3">
      <% @user.photos.each do |photo| %>
        <tr>
          <td><%= photo.caption %></td>
          <td><img class="img-responsive" src="<%= photo.image%>" alt="" /></td>
        </tr>

      <% end %>
            </div>
    </dl>

    </div>
  </div>
</div>
