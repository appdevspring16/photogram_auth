<div class="page-header">
  <h3>User <%=@user.username.capitalize %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @user.username.capitalize %></dd>

      <dt>E-mail</dt>
      <dd><%= @user.email %></dd>

      <dt>Photos</dt>


      <div class="col-md-3">
      <% @user.photos.each do |photo| %>
        <tr>
          <td><%= photo.caption %></td>
          <td><img class="img-responsive" src="<%= photo.image%>" alt="" /></td>
        </tr>

      <% end %>
            </div>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
