<div class="container">
  <div class="row">
<div class="column-md-8 column-md-offset-2">

<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Add Photo</h3>
  </div>
  <div class="panel-body">
     <form action="/create_photo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="control-label">
          Caption
        </label>

        <textarea id="caption" name="caption" placeholder="Add a caption..." class="form-control" rows="3"><%= @photo.caption %></textarea>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Add a URL..." class="form-control" value="<%= @photo.image %>">
      </div>

      <!-- Label and input for user_id -->


        <input type="hidden" name="user_id" value="<%= current_user.id %>">


  <div class="form-group">
            <button class="btn btn-success btn-block">
              Create Photo
            </button>
          </div>


       <div class="form-group">
            <a href="/photos" class="btn btn-link btn-block">
              Cancel
            </a>
          </div>



    </form>
  </div>
</div>
</div>
    </div>
</div>






