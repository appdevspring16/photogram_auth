<!-- Put div container/row here -->
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Add Photo</h2>
      </div>

      <!-- Validation failure messages -->
      <% if @photo.errors.any? %>
      <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
      <% end %>
      <% end %>

      <div class="panel-body">
        <form class="form-horizontal" action="/create_photo" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Input for photo_id -->
          <textarea type="hidden" id="photo_id" name="photo_id" class="form-control" value="<%= @photo.id %>"></textarea>


          <!-- Label and input for caption -->
          <div class="form-group">
            <label class="control-label" for="caption" class="control-label">
              Caption
            </label>

            <textarea id="caption" name="caption" placeholder="Add a caption..." class="form-control" rows="3"></textarea>
          </div>

          <!-- Label and input for image -->
          <div class="form-group">
            <label class="control-label" for="image" class="control-label">
              Image
            </label>

            <input type="text" id="image" name="image" placeholder="Add a URL..." class="form-control">
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">

            <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

          </div>
          <div class="form-group">
            <button class="btn btn-success btn-block">
              Create Photo
            </button>
          </div>
          <div class="btn btn-link btn-block">
            <a href="/photos">CANCEL</a>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
</div>
