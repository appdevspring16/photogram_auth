<div class="col-md-8 col-md-offset-2">
<a href="/photos/new" class="btn btn-default btn-block">
<i class="fa fa-plus"></i>
</a>
<hr>
</div>


<% @photos.each do |photo| %>
<div class="col-md-8 col-md-offset-2">
<div class="panel panel-default">
  <div class="panel-heading"> <h3 class="panel-title"><%= photo.user.username %></h3>
    </div>
  <div class="panel-body">
    <div>
      <img src="<%= photo.image %>" class="img-responsive" alt="Responsive image">
    </div>

    <p><a href="/like/new"><i class="fa fa-heart" aria-hidden="true"></i></a>
      likes this
    </p>
    <div class="media-body">
      <h6 class="media-heading"><%= photo.caption.username %></h6>
      <p>
          <%= photo.caption %>
      </p>
    </div>
    </div>
</div>
</div>
<% end %>


