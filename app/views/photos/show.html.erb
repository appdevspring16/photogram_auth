<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">


      <div class="panel panel-default">
<div class="panel-heading"><%= @photo.caption %>&nbsp;&nbsp;&nbsp;<%= @photo.user.username %></a><small>&nbsp;&nbsp;&nbsp;<%= time_ago_in_words(@photo.created_at) %></small></div>
        <div class="panel-body">

      <dd><img src="<%= @photo.image %>" class="img-responsive">

        <ul class="media-list">
                            <% @photo.comments.each do |comment| %>

                            <li class="media"><div class="media-body"><h6 class="media-heading">
                              <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a><small>&nbsp;&nbsp;&nbsp;<%= time_ago_in_words(comment.created_at) %></small>
                              </h6>

                            </div></li>


                          <p>
                          <%= comment.body %></p>

                          <% end %></ul>



        <form action="/create_comment" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for photo_id -->

          <!-- Label and input for body -->
          <div class="form-group">

            <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" rows="3"><%= @comment.body %></textarea>
          </div>
          
        </form>

      </dd>
    </div>
  </div>


    </dl>
                    <% if current_user.username == @photo.user.username %>
    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>          <% else %>
<% end %>
