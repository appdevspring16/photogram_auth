

<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <hr>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><a href="/users/<%= @photo.user.id %>"><%= @photo.user.username %></a>
          <small><%= time_ago_in_words(@photo.created_at) %> ago</small>
        </h3>
      </div>
      <div class="panel-body">
        <img src="<%= @photo.image %>" alt="" class="img-responsive" />

        <% if @photo.fans.where({ :id => current_user.id }).present? %>
        <form  action="/create_like" method="post">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <input type="hidden" name="user_id" value="<%= current_user.id %>">
          <input type="hidden" name="photo_id" value="<%= @photo.id %>">
          <button class="btn btn-link">
            <i class="fa fa-heart"></i>
          </button>
          <small>
            <% if @photo.fans.count == 0 %>
            <small>be the first to like this</small>
            <% else%>
            <% if @photo.fans.count == 1  %>
            <%= @photo.fans.pluck(:username).to_sentence %> likes this
            <% else %>
            <%= @photo.fans.pluck(:username).to_sentence %> like this
            <% end %>
            <% end %>
          </small>
        </form>
        <% else %>
        <form  action="/delete_like/1<%# @photo.likes.find_by( :user_id => current_user.id ).id %>" method="post">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <input type="hidden" name="user_id" value="<%= current_user.id %>">
          <input type="hidden" name="photo_id" value="<%= photo.id %>">
          <button class="btn btn-link">
            <i class="fa fa-heart-o"></i>
          </button>
          <small>
            <% if @photo.fans.count == 0 %>
            <small>be the first to like this</small>
            <% else%>
            <% if @photo.fans.count == 1  %>
            <%= @photo.fans.pluck(:username).to_sentence %> likes this
            <% else %>
            <%= @photo.fans.pluck(:username).to_sentence %> like this
            <% end %>
            <% end %>
          </small>
        </form>
        <% end %>


        <ul class="media-list">
          <li class="media"><h6><a href="/users/<%= @photo.user.id %>"><%= @photo.user.username %></a> <small> <%= time_ago_in_words(@photo.created_at) %> ago</small></h6> <%= @photo.caption %></li>
          <% @photo.comments.order(created_at: :desc).each do |comment| %>
          <li class="media"><h6><a href="/users/<%= comment.user.id %>" ><%= comment.user.username %></a> <small> <%= time_ago_in_words(comment.created_at) %> ago</small></h6> <%= comment.body %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% if @photo.user.id == current_user.id %>
    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      </a>
    </div>
    <% else %>
    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </a>
    </div>
    <% end %>


  </div>
</div>
