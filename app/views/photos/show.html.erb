<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <dl class="dl-horizontal">
      <dt>Caption</dt>
      <dd><%= @photo.caption %></dd>

      <dt>Image</dt>
      <dd> <img src="<%= @photo.image %>" alt="" class="img-responsive"/></dd>

      <dt>User</dt>
      <dd><%= @photo.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified col-md-6 col-md-offset-2">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <% if current_user.id == @photo.user_id %>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end %>
    </div>

    <p>
      <% if @like.user_id %>
      <form action="/delete_like/<%= @like.id %>" method="nofollow">

        <button class="btn btn-link">
          <i class="fa fa-heart"></i>
        </button>
      </form>
      <% else %>
      <form action="/create_like" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <input type="hidden" name="photo_id" value="<%= @photo.id %>">

        <input type="hidden" name="user_id" value="<%= @photo.user_id %>">

        <button class="btn btn-link">
          <i class="fa fa-heart-o"></i>
        </button>
      </form>
      <% end %>

    </p>


    <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- input for photo_id -->
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id %>">


      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Comment
        </label>

        <textarea id="body" name="body" placeholder="Comment" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%=current_user.id %>">
      </div>

      <button class="btn btn-success">
        Create Comment
      </button>
      or
      <a href="/comments">Cancel</a>
    </form>


  </div>
</div>
