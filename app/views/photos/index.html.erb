<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>

    <hr>
  </div>
</div>

<% @photos.each do |photo| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class= "panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= photo.user.id %>"><%= photo.user.username %></a>
        </h3>

        <small>
          <%= time_ago_in_words(photo.created_at) %> ago
        </small>
      </div>

      <div class="panel-body">
        <a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" class="img-responsive"/>
        </a>

        <p>
          <% if photo.fans.pluck(:id).empty? == true %>
          <form action="/create_like" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

            <input type="hidden" id="photo_id" name="photo_id" value="<%= photo.id %>">

            <button class="btn btn-success">
              <i class="fa fa-heart-o"></i>
            </button>
          </form>
          <small class="text-muted">be the first to like this</small>
          <% elsif Like.find_by(:user_id => current_user.id, :photo_id => photo.id).nil? == true %>
          <form action="/create_like" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

            <input type="hidden" id="photo_id" name="photo_id" value="<%= photo.id %>">

            <button class="btn btn-success">
              <i class="fa fa-heart-o"></i>
            </button>
          </form>

          <small class="text-muted">
            <% if photo.fans.pluck(:username).length > 1 %>
            <%= photo.fans.pluck(:username).to_sentence %> like this
            <% else %>
            <%= photo.fans.pluck(:username).to_sentence %> likes this
            <% end %>
          </small>

          <% else %>
          <a href="/delete_like/<%= Like.find_by(:user_id => current_user.id, :photo_id => photo.id).id %>">
            <i class="fa fa-heart"></i>
          </a>

          <small class="text-muted">
            <% if photo.fans.pluck(:username).length > 1 %>
            <%= photo.fans.pluck(:username).to_sentence %> like this
            <% else %>
            <%= photo.fans.pluck(:username).to_sentence %> likes this
            <% end %>
          </small>

          <% end %>
        </p>

        <ul class="media-list">
          <% photo.comments.each do |comment| %>
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= comment.user %>"><%= comment.user.username %></a>
                <small>
                  <%= time_ago_in_words(comment.created_at) %> ago
                </small>
              </h6>
              <%= comment.body %>
            </div>
          </li>
          <% end %>

          <li class="media">
            <div class="media-body">
              <form action="/create_comment" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value="DDvH2QfLACnDWYOZ2bz3iIPWwDEhwoHKT4uHLdC8Y/UQ+UftEVlrLwidWo9lrcXCZCeVmiPcCyAEhkoWWu5b5w==">

                <input type="hidden" name="photo_id" value="<%= photo.id %>">

                <input type="hidden" name="user_id" value="<%= current_user.id %>">

                <!-- Label and input for body -->
                <div class="form-group">
                  <label for="body" class="sr-only">
                    Body
                  </label>

                  <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>
                </div>
              </form>
            </div>
          </li>
        </ul>

      </div>



    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <hr>
  </div>
</div>
