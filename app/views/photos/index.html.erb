<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <a href="/photos/new" class="btn btn-default btn-block btn-primary"><i class="fa fa-plus"></i></a>
    </div>
  </div>

  <% @photos.each do |photo| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>"><%= @user.find_by(id: photo.user_id).username %></a>
            <%= time_ago_in_words(photo.created_at) %>
          </h3>
        </div>
        <div class="panel-body">
          <a href="/photos/<%= photo.id %>"><img src="<%= photo.image %>" class="img-responsive"></a>
        </div>
        <div class="panel-title">
          <% if current_user.likes == Like.find_by(photo_id: photo.id) %>
              <% then %>
                <a href="/delete_like" class="btn btn-link">
                  <i class="fa fa-heart"></i>
                </a>
              <% else %>
                <a href="/create_like" class="btn btn-link">
                  <i class="fa fa-heart-o"></i>
                </a>
          <% end %>
        </div>
      </div>

      <form action="/create_comment" method="post">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <input type="hidden" name="photo_id" value="<%= photo.id %>">
        <input type="hidden" name="user_id" value="<%= current_user.id %>">

        <div class="form-group">
          <label for="comment" class="control-label">
            Comment
          </label>

          <input type="text" id="comment" name="body" placeholder="Comment" class="form-control">
        </div>

        <button class="btn btn-success">
          Create Comment
        </button>
        or
        <a href="/photos">Cancel</a>
      </form>

    </div>
  </div>
  <% end %>
</div>
