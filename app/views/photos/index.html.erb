<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>
        <a href="/photos/new" class="btn btn-default btn-group-justified"><i class="fa fa-plus" aria-hidden="true"></i></a>
      </h1>
    </div>
  </div>

  <hr>

  <!-- <div> -->
  <%# User.find_by(:id => @photos.user_id).each do |user| %>
  <!-- <p><%# user.username %></p> -->
  <%# end %>
  <!-- </div> -->

  <% @photos.each do |photo| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>">
            <%= User.find(photo.user_id).username %>
            </a>
          </h3>
          <small class="text-muted">
            <%= time_ago_in_words(Time.now - photo.created_at) %>
          </small>
        </div>

        <div class="panel-body">
          <a href="/photos/<%= photo.id %>">
            <img class="img-responsive" src="<%= photo.image %>">
          </a>

          <!-- like heart -->
          <form action="/create_like" method="post">
            <button type="button" class="btn btn-link">
              <i class="fa fa-heart-o" aria-hidden="true"></i>
            </button>
            <small class="text-muted">be the first to like this</small>
          </form>

          <ul class="media-list">
            <li class="media">
              <div class="media-body">
                <h6 class="media-heading">
                  <% photo.comments.each do |comment| %>
                  <a href="/users/<%= comment.user_id %>">
                    <%= User.find(comment.user_id).username %>
                  </a>
                </h6>
                <p>
                  <%= comment.body %>
                </p>
                <% end %>

              </div>
            </li>

            <li>
              <div class="media-body">
                <form action="/create_comment" method="post">
                  <div class="form-group">
                    <input type="text" id="body" name="body" placeholder="Add a comment.." class="form-control">
                  </div>
                </form>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

