
<div>
  <div class="col-md-8 col-md-offset-2 padding-inside-top-sm padding-inside-bottom-sm">
    <a class="btn btn-default btn-group-justified" href="/photos/new" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
    </a>
  </div>
  <hr>
  <div class="col-md-8 col-md-offset-2 padding-inside-top-sm padding-inside-bottom-sm">
    <% @photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%=photo.user_id%></h3>
      </div>
      <div class="panel-body">
        <a href="/photos/<%=photo.id%>"><img class="img-responsive" src="<%= photo.image %>"></a>
      </div>
      <div class="panel-body">
        <a href="/users/<%=photo.user_id%>"><%=photo.user_id%></a><br>
        <%=photo.caption%>
      </div>
      <% photo.comments do |comment| %>
      <div class="panel-body">
        <%=comment.body%>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
