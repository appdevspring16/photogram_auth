<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>


<% @photos.each do |photo| %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= photo.user_id %>"> <%= photo.user.username %> </a>
          <small>
            <%= time_ago_in_words(photo.updated_at) %>
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" class="img-responsive">
        </a>


        <!-- all comments for this photo -->
        <% photo.comments.each do |comment| %>
        <ul class="media-list">

          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= comment.user_id %>"> <%= comment.user.username %> </a>
                <small>
                  <%=   time_ago_in_words(comment.updated_at) %>
                </small>
              </h6>
              comment.body
            </div>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
