<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>
        <a href="/photos/new" class="btn btn-default btn-group-justified"><i class="fa fa-plus" aria-hidden="true"></i></a>
      </h1>
    </div>
  </div>

  <hr>

  <!-- <div> -->
  <%# User.find_by(:id => @photos.user_id).each do |user| %>
  <!-- <p><%# user.username %></p> -->
  <%# end %>
  <!-- </div> -->

  <% @photos.each do |photo| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= User.find(photo.user_id).username %>
          </h3>
        </div>

        <div class="panel-body">
          <a href="/photos/<%= photo.id %>"><img class="img-responsive" src="<%= photo.image %>"></a>
        </div>

        <!-- like heart -->
        <form action="/create_like" method="post">
          <button type="button" class="btn btn-link">
            <i class="fa fa-heart-o" aria-hidden="true"></i>
          </button>
          <small class="text-muted">be the first to like this</small>
        </form>

        <ul class="media-list">
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <% @photos.comments.each do |comment| %>
                <a href="/users/<%= comment.user_id %>">
                  <img class="media-object" src="..." alt="...">
                </a>
                <% end %>
              </h6>
            </div>
          </li>

          <li>
            <div class="media-body">

            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
</div>

