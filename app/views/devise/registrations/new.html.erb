<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">


      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title"> Sign Up</h5>
        </div>


        <form class="form-horizontal" role="form" id="new_user" action="/" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="âœ“"><input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="user_email">Email</label>
            <div class="col-sm-10">
              <input autofocus="autofocus" class="form-control" type="email" value="" name="user[email]" id="user_email">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="user_username">Username</label>
            <div class="col-sm-10">
              <input autofocus="autofocus" class="form-control" type="username" name="user[username]" id="user_username">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="user_password">Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="col-sm-10">
              <input autocomplete="off" class="form-control" type="password" name="user[password]" id="user_password">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="user_password_confirmation">Password Confirmation</label>
            <div class="col-sm-10">
              <input autocomplete="off" class="form-control" type="password" name="user[password_confirmation]" id="user_passowrd_confirmation">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <label for="user_remember_me">
                <input name="user[remember_me]" type="hidden" value="0"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember me
              </label>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="commit" value="Sign Up" class="btn btn-success btn-block">
              </div>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
