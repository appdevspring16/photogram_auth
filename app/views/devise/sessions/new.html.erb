<h2>Log in</h2>

<div class="container">

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="alert alert-dismissable alert-warning">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          You need to sign in or sign up before continuing.
        </div>
      </div>
    </div>

    <div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Log In</h2>
      </div>

      <div class="panel-body">


<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>
<div class="form-group">
   <label class="col-sm-2 control-label" for="user_email">Email</label>
   <div class="col-sm-10">
    <%= f.email_field :email, :class => "form-control", autofocus: true %>
  </div>
</div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="user_email">Password</label>
     <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
              <label for="user_remember_me">
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </label>
          </div>
  </div>

  <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

                <%= f.submit "Log in", :class => "btn btn-success btn-block" %>
            </div>
<% end %>
<div class="col-sm-offset-2 col-sm-10">
<%= render "devise/shared/links" %>
</div>
</div>
    </div>

  </div>
</div>


    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <hr>
      </div>
    </div>
</div>
